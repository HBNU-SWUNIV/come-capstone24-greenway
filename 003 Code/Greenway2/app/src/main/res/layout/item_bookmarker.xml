<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/parking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parking Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/parking_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parking Address"
        android:layout_marginTop="8dp"
        android:layout_below="@id/parking_name" />

    <ImageView
        android:id="@+id/bookmarker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_empty_bookmarker"/>
</RelativeLayout>
