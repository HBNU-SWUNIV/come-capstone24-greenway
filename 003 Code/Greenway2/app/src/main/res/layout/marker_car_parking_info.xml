<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/car_parking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Parking Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/car_parking_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading address..."
        android:layout_below="@id/car_parking_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_parking_address"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/current_parking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주차 현황: "
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/bookmarker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_empty_bookmarker"
        android:contentDescription="즐겨찾기 버튼" />
</RelativeLayout>
